# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

lib_zeppelin=/usr/lib/zeppelin

%:
	dh $@

override_dh_auto_build:
	bash debian/do-component-build

svcs=zeppelin

$(svcs): debian/init.d.tmpl
	bash $< debian/$@.svc deb debian/$@.init
	touch $@

override_dh_auto_install: $(svcs)
	bash -x debian/install_zeppelin.sh \
	--build-dir=`pwd` \
	--doc-dir=/usr/share/doc/zeppelin \
	--source-dir=debian \
	--prefix=debian/tmp
	
	rm -f debian/tmp/${lib_zeppelin}/interpreter/hive/hadoop-*.jar
	rm -f debian/tmp/${lib_zeppelin}/interpreter/hive/hive-*.jar
	rm -f debian/tmp/${lib_zeppelin}/interpreter/hive/zookeeper-*.jar

	ln -s /usr/lib/zookeeper/zookeeper.jar debian/tmp/${lib_zeppelin}/interpreter/hive/

	ln -s /usr/lib/hadoop/client/hadoop-annotations.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hadoop/client/hadoop-auth.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hadoop/client/hadoop-common.jar debian/tmp/${lib_zeppelin}/interpreter/hive/

	ln -s /usr/lib/hive/lib/hive-common.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hive/lib/hive-jdbc.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hive/lib/hive-metastore.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hive/lib/hive-serde.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hive/lib/hive-service.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hive/lib/hive-shims.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hive/lib/hive-shims-common.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
	ln -s /usr/lib/hive/lib/hive-shims-common-secure.jar debian/tmp/${lib_zeppelin}/interpreter/hive/
